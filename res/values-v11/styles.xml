<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Sherlock.__Theme" parent="@*android:style/Theme.Holo">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Sherlock.__Theme.Light" parent="@*android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="Zoobe.Theme.Base" parent="@style/Theme.Sherlock">
        <item name="android:icon">@*android:color/transparent</item>
        <item name="android:actionBarStyle">@style/Zoobe.ActionBarStyle</item>
        <item name="android:displayOptions">showHome|homeAsUp|showTitle</item>
        <item name="android:actionButtonStyle">@style/Zoobe.ActionButtonStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/z_gen_ic_back</item>
        <item name="android:actionBarItemBackground">@null</item>
    </style>
    <style name="Zoobe.ActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ics_ab</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleStyle</item>
        <item name="android:backgroundStacked">@drawable/ics_ab</item>
        <item name="android:backgroundSplit">@drawable/actionbar_bg_split</item>
    </style>
    <style name="ActionBarSubtitleStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffcfb2e8</item>
    </style>
    <style name="ActionBarTitleStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">18.0dip</item>
        <item name="android:textColor">#ffffffff</item>
    </style>
    <style name="Zoobe.ActionButtonStyle" parent="@style/Widget.Sherlock.ActionButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/ics_ab</item>
        <item name="android:padding">-4.0dip</item>
        <item name="android:paddingLeft">-4.0dip</item>
        <item name="android:paddingRight">-4.0dip</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:minWidth">56.0dip</item>
        <item name="android:minHeight">56.0dip</item>
    </style>
    <style name="LeaveGroupDialogText" parent="@*android:style/TextAppearance.Medium" />
    <style name="Theme.__Viber" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ActionBarStyle</item>
        <item name="android:dropDownSpinnerStyle">@style/Widget.Viber.DropDown</item>
        <item name="android:actionModeBackground">@drawable/_ics_cab_bg_top</item>
        <item name="android:listChoiceBackgroundIndicator">?list_selector</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle</item>
        <item name="android:actionBarTabBarStyle">@style/ActionBarTabBarStyle</item>
        <item name="android:activatedBackgroundIndicator">?activated_background</item>
        <item name="android:fastScrollThumbDrawable">@drawable/_ics_fastscroll_thumb</item>
        <item name="android:fastScrollPreviewBackgroundLeft">@drawable/_ics_fastscroll_label_left</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/_ics_fastscroll_label_right</item>
        <item name="android:fastScrollTrackDrawable">@drawable/_ics_fastscroll_track</item>
        <item name="actionBarItemBackground">@drawable/ab_item_bg</item>
        <item name="actionModeSplitBackground">@drawable/_ics_cab_bg_bottom</item>
    </style>
    <style name="Theme.Viber.NoActionBar" parent="@style/Theme.Viber">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Viber.Translucent.Forward" parent="@style/Theme.Viber.Translucent">
        <item name="android:dropDownListViewStyle">@style/Widget.Viber.DropDownListView</item>
        <item name="android:actionDropDownStyle">@style/Widget.Viber.SpinnerForward</item>
    </style>
    <style name="Theme.Viber.PhotoGallery" parent="@style/Theme.Viber">
        <item name="android:buttonStyle">@style/Widget.Viber.Button.Dark</item>
        <item name="android:buttonStyleSmall">@style/Widget.Viber.Button.Dark.Small</item>
        <item name="android:windowBackground">@color/solid</item>
        <item name="android:actionBarStyle">@style/ActionBarStyle.Gallery</item>
        <item name="doodleButtonBackground">@drawable/photo_edit_btn_bg</item>
    </style>
    <style name="Widget.Viber.Button" parent="@*android:style/Widget.Holo.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:background">@drawable/btn_tall</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:minWidth">102.0dip</item>
        <item name="android:minHeight">50.0dip</item>
    </style>
    <style name="ActionBarStyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/_ics_ab</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle.Normal</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleStyle.Normal</item>
        <item name="android:indeterminateProgressStyle">@style/IndeterminateProgress</item>
        <item name="backgroundSplit">@drawable/actionbar_bg_split</item>
        <item name="backgroundStacked">@drawable/_ics_ab</item>
    </style>
    <style name="ActionBarStyle.Gallery" parent="@style/ActionBarStyle">
        <item name="android:background">@color/actionbar_dark_bg</item>
        <item name="android:displayOptions">homeAsUp|showTitle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarSubtitleStyle.Gallery</item>
    </style>
    <style name="Widget.Viber.MenuOverflow" parent="@style/Widget">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:listSelector">@drawable/_ics_list_selector</item>
        <item name="android:popupBackground">@drawable/abs__menu_dropdown_panel_holo_dark</item>
        <item name="android:textAppearanceLargePopupMenu">@style/TextAppearance.Sherlock.Widget.PopupMenu.Large</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/TextAppearance.Sherlock.Widget.PopupMenu.Small</item>
        <item name="textColorPrimary">?android:textColorPrimary</item>
        <item name="dropdownListPreferredItemHeight">48.0dip</item>
    </style>
    <style name="Widget.Viber.DropDown" parent="@*android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background</item>
    </style>
</resources>
