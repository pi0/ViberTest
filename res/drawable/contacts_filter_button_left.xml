<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/contacts_filter_corner_radius" android:bottomRightRadius="@dimen/contacts_filter_corner_radius" />
            <solid android:color="@color/contacts_filter_color" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/contacts_filter_corner_radius" android:bottomRightRadius="@dimen/contacts_filter_corner_radius" />
            <solid android:color="@color/contacts_filter_color" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@*android:color/transparent" />
            <corners android:topLeftRadius="@dimen/contacts_filter_corner_radius" android:bottomRightRadius="@dimen/contacts_filter_corner_radius" />
            <stroke android:width="1.0dip" android:color="@color/contacts_filter_color" />
        </shape>
    </item>
</selector>